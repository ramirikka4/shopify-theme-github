{{ 'image-with-line-text.css' | asset_url | stylesheet_tag }}

<style>
  
  #section-{{ section.id }} {
    background: {{ section.settings.background }};
    padding-top: {{ section.settings.section_padding_y }}px;
    padding-bottom: {{ section.settings.section_padding_y }}px;
    padding-left: {{ section.settings.section_padding_x }}px;
    padding-right: {{ section.settings.section_padding_x }}px;
    color: {{ section.settings.text_color}};
  }
  
  .personal-header h2{
    font-size: {{ section.settings.header_font_size }};
  }

  .personal-header p{
    font-size: {{ section.settings.sub_header_font_size }};
  }

  @media only screen and (max-width: 48em) {
    .personal-header h2{
      font-size: 20px;
    }
  
    .personal-header p{
      font-size: 16px;
    }
  }

</style>

<div id="section-{{ section.id }}">
  <div class="image-with-line-header">
    {%- if section.settings.title != blank -%}
      <div class="image-with-line-line"> 
        <div class="line"></div>
        <h2>{{ section.settings.title }}</h2>
        <div class="line"></div>
      </div>
    {%- endif -%}
    
    {%- if section.settings.section_description != blank -%}
      {{ section.settings.section_description }}
    {%- endif -%}
  </div>

  <div class="image-with-line-container">
    {%- for block in section.blocks -%}
      <div class="staff-container" {{ block.shopify_attributes }}>
          <div class="staff-image-container"> 
            {%- if block.settings.line_image != blank -%}
              {{
                block.settings.line_image
                | image_url: width: '160x160'
                | image_tag: block.settings.staff_image.alt, '160x160'
              }}
            {%- endif -%}
          </div>
      </div>
    {%- endfor -%}
  </div>

  </div>

{% schema %}
{
  "name": "Image-with-line",
  "tag": "section",
  "class": "image-with-line-section shopify-section page-width",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "TITLE"
    },
    {
      "type": "select",
      "id": "header_font_size",
      "label": "Font size",
      "default": "30px",
      "options": [
        {
          "label": "Small",
          "value": "20px"
        },
        {
          "label": "Medium",
          "value": "25px"
        },
        {
          "label": "Large",
          "value": "30px"
        }
      ]
    },
    {
      "type": "richtext",
      "id": "section_description",
      "label": "Section Description"
    },
    {
      "type": "select",
      "id": "sub_header_font_size",
      "label": "Description Font size",
      "default": "18px",
      "options": [
        {
          "label": "Small",
          "value": "16px"
        },
        {
          "label": "Medium",
          "value": "18px"
        },
        {
          "label": "Large",
          "value": "20px"
        }
      ]
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#1c1b1b"
    },
    {
      "type": "range",
      "id": "section_padding_y",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section Padding Top & Bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "section_padding_x",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section Padding Left & Right",
      "default": 0
    }
  ],
  "blocks": [
    {
      "name": "Image With Line Title",
      "type": "title",
      "settings": [
        {
          "type": "image_picker",
          "id": "line_image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image With Line Title",
      "blocks": [
        {
          "type": "title"
        }
      ]
    }
  ]
}
{% endschema %}