{{ 'image-with-line.css' | asset_url | stylesheet_tag }}

<style>
  
  #section-{{ section.id }} {
    background: {{ section.settings.background }};
    padding-top: {{ section.settings.section_padding_y }}px;
    padding-bottom: {{ section.settings.section_padding_y }}px;
    padding-left: {{ section.settings.section_padding_x }}px;
    padding-right: {{ section.settings.section_padding_x }}px;
    color: {{ section.settings.text_color}};
  }

</style>

<div id="section-{{ section.id }}">
  <div>
    <div class="testimonials-header">
      {%- if section.settings.title != blank -%}
        <div class="header-line"> 
          <div class="line"></div>
          <h3>{{ section.settings.title }}</h3>
          <div class="line"></div>
        </div>
      {%- endif -%}
      
      {%- if section.settings.section_description != blank -%}
        {{ section.settings.section_description }}
      {%- endif -%}
    </div>

    <div>
      
    </div>
    
  </div>
</div>

{% schema %}
{
  "name": "Image With Line",
  "tag": "section",
  "class": "image-with-line shopify-section page-width",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "OUR REVIEWS"
    },
    {
      "type": "select",
      "id": "header_font_size",
      "label": "Font size",
      "default": "30px",
      "options": [
        {
          "label": "Small",
          "value": "20px"
        },
        {
          "label": "Medium",
          "value": "25px"
        },
        {
          "label": "Large",
          "value": "30px"
        }
      ]
    },
    {
      "type": "richtext",
      "id": "section_description",
      "label": "Section Description"
    },
    {
      "type": "select",
      "id": "sub_header_font_size",
      "label": "Description Font size",
      "default": "18px",
      "options": [
        {
          "label": "Small",
          "value": "16px"
        },
        {
          "label": "Medium",
          "value": "18px"
        },
        {
          "label": "Large",
          "value": "20px"
        }
      ]
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#1c1b1b"
    },
    {
      "type": "range",
      "id": "section_padding_y",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section Padding Top & Bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "section_padding_x",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section Padding Left & Right",
      "default": 0
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Enable Autoplay",
      "default": true
    }
  ],
  "blocks": [
    {
      "name": "Testimonial",
      "type": "title",
      "settings": [
        {
          "type": "richtext",
          "id": "description",
          "label": "Testimonial text"
        },
        {
          "type": "select",
          "id": "star_rating",
          "label": "Star Rating",
          "options": [
            {
              "value": "",
              "label": "None"
            },
            {
              "value": "3",
              "label": "3 out of 5"
            },
            {
              "value": "3.5",
              "label": "3.5 out of 5"
            },
            {
              "value": "4",
              "label": "4 out of 5"
            },
            {
              "value": "4.5",
              "label": "4.5 out of 5"
            },
            {
              "value": "5",
              "label": "5 out of 5"
            }
          ]
        },
        {
          "type": "text",
          "id": "title",
          "label": "Author's name"
        },
        {
          "type": "select",
          "id": "font_size",
          "label": "Font size",
          "default": "20px",
          "options": [
            {
              "label": "Small",
              "value": "16px"
            },
            {
              "label": "Medium",
              "value": "20px"
            },
            {
              "label": "Large",
              "value": "24px"
            }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonial",
      "blocks": [
        {
          "type": "title"
        },
        {
          "type": "title"
        },
        {
          "type": "title"
        }
      ]
    }
  ]
}
{% endschema %}
