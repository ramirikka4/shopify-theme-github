<style>
  .social-media-image-section{
    padding-top: 36px;
    padding-bottom: 36px;
  }
  
  .social-media-image-header{
    text-align: center;
  }

  .social-media-image-header h2{
    letter-spacing: 2px;
    font-size: 20px;
    font-family: Arial, sans-serif;
  }

  .social-media-image-container{
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 50px;
    margin-top: 60px;
  }

  .image-container {
    width: 200px;
    height: 200px;
  }

</style>

  <div class="social-media-image-header">
    {%- if section.settings.title != blank -%}
        <h2>{{ section.settings.title }}</h2>
    {%- endif -%}
  </div>

  <div class="social-media-image-container">
    {%- for block in section.blocks -%}
      <div class="image-container" {{ block.shopify_attributes }}>
          <div class="more-info-image_container">
          {%- if block.settings.media_image != blank -%}
            {{
              block.settings.media_image
              | image_url: width: 600
              | image_tag: height: 160, alt: block.settings.media_image.alt, preload: true
            }}
          {%- else -%}
            {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>
      </div>
    {%- endfor -%}
  </div>

{% schema %}
{
  "name": "Social Media Image",
  "tag": "section",
  "class": "social-media-image-section shopify-section page-width",
  "settings": [
    {
      "type": "richtext",
      "id": "section_description",
      "label": "Follow us @bywildblooms on Instagram"
    }
  ],
  "blocks": [
    {
      "name": "Social Media",
      "type": "title",
      "settings": [
        {
          "type": "image_picker",
          "id": "media_image",
          "label": "Staff image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Social Media",
      "blocks": [
        {
          "type": "title"
        },
        {
          "type": "title"
        },
        {
          "type": "title"
        },
        {
          "type": "title"
        }
      ]
    }
  ]
}
{% endschema %}