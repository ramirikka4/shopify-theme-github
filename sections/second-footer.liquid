{{ 'testimonials.css' | asset_url | stylesheet_tag }}

<style>
  
  #section-{{ section.id }} {
    background: {{ section.settings.background }};
    padding-top: {{ section.settings.section_padding_y }}px;
    padding-bottom: {{ section.settings.section_padding_y }}px;
    padding-left: {{ section.settings.section_padding_x }}px;
    padding-right: {{ section.settings.section_padding_x }}px;
    color: {{ section.settings.text_color}};
  }
  
  .testimonials-header h3{
    font-size: {{ section.settings.header_font_size }};
  }

  .testimonials-header p{
    font-size: {{ section.settings.sub_header_font_size }};
  }

  .author-name{
    font-size: {{ section.blocks.settings.font_size }};
  }

  .testimonials_description{
    font-size: {{ section.blocks.settings.font_size }};
    
  }
  
    .testimonial-logo_container img{
      max-height: 30px;
    }

  .line:empty{
    width: 100px;
  }

  .text-and-line-container{
    display: flex;
    flex-direction: row;
    align-content: center;
    justify-content: center;
    align-items: center;
    gap: 10px;
  }

  .testimonial-logo_container{
    display: flex;
    margin-bottom: 5px;
  }

  .social_media_button_logo_container{
    display: flex;
    margin-top: 2px;
    margin-left: 4px;
  }
  
  .social_media_button_logo_container img{
    max-height: 20px;
  }

  .button-container a.button.button--secondary {
    background-color: #F4F4F4;
  }

  .button-container a.button.button--secondary:hover {
    scale: 1.1;
  }

  .swiper-slide.testimonials {
    display: flex;
    justify-content: center;
  }

  
  @media only screen and (max-width: 48em) {
    .testimonials-header h3{
      font-size: 20px;
    }

    .testimonials-header p{
      font-size: 16px;
    }

    .line:empty{
      width: 50px;
    }
    
  }

</style>

<div id="section-{{ section.id }}">  
      {%- for block in section.blocks -%}
        <div class="secondary-footer-content-container" {{ block.shopify_attributes }}>
          <div class="secondary-footer-content-container-inner">
            {%- if block.settings.description != blank -%}
              <div class="secondary-footer_description">
                {{ block.settings.description -}}
              </div>
            {%- endif -%}
          
            {%- if block.settings.title != blank -%}
              <div class="secondary-footer-block-title">{{ block.settings.title }}</div>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
</div>

{% schema %}
{
  "name": "Secondary Footer",
  "tag": "section",
  "class": "secondary-foooter-section shopify-section",
  "disabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "FOOTER TITLE"
    },
    {
      "type": "select",
      "id": "header_font_size",
      "label": "Font size",
      "default": "30px",
      "options": [
        {
          "label": "Small",
          "value": "20px"
        },
        {
          "label": "Medium",
          "value": "25px"
        },
        {
          "label": "Large",
          "value": "30px"
        }
      ]
    },
    {
      "type": "richtext",
      "id": "section_description",
      "label": "Section Description"
    },
    {
      "type": "select",
      "id": "sub_header_font_size",
      "label": "Description Font size",
      "default": "18px",
      "options": [
        {
          "label": "Small",
          "value": "16px"
        },
        {
          "label": "Medium",
          "value": "18px"
        },
        {
          "label": "Large",
          "value": "20px"
        }
      ]
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#1c1b1b"
    },
    {
      "type": "range",
      "id": "section_padding_y",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section Padding Top & Bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "section_padding_x",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section Padding Left & Right",
      "default": 0
    }
  ],
  "blocks": [
    {
      "name": "Footer_Menu",
      "type": "title",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Item Title"
        },
        {
          "type": "select",
          "id": "font_size",
          "label": "Font size",
          "default": "20px",
          "options": [
            {
              "label": "Small",
              "value": "16px"
            },
            {
              "label": "Medium",
              "value": "20px"
            },
            {
              "label": "Large",
              "value": "24px"
            }
          ]
        },
        {
          "type": "link_list",
          "id": "footer-menu",
          "label": "Menu"
        }
      ]
    },
    {
      "name": "Footer_Contact",
      "type": "text",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Item Title"
        },
        {
          "type": "select",
          "id": "font_size",
          "label": "Font size",
          "default": "20px",
          "options": [
            {
              "label": "Small",
              "value": "16px"
            },
            {
              "label": "Medium",
              "value": "20px"
            },
            {
              "label": "Large",
              "value": "24px"
            }
          ]
        },
        {
          "type": "richtext",
          "id": "phone",
          "label": "Item Title"
        },
        {
          "type": "richtext",
          "id": "location",
          "label": "Item Title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Sub_Footer",
      "blocks": [
        {
          "type": "title"
        },
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}
