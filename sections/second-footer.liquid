{{ 'testimonials.css' | asset_url | stylesheet_tag }}

<style>
  
  #section-{{ section.id }} {
    background: {{ section.settings.background }};
    padding-top: {{ section.settings.section_padding_y }}px;
    padding-bottom: {{ section.settings.section_padding_y }}px;
    padding-left: {{ section.settings.section_padding_x }}px;
    padding-right: {{ section.settings.section_padding_x }}px;
    color: {{ section.settings.text_color}};
  }
  
  .secondary-footer-block-title{
    font-size: {{ section.blocks.settings.font_size }};
  }

  .secondary-footer_description{
    font-size: {{ section.blocks.settings.font_size }};
  }

  .secondary-footer-block-container {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: 60px;
  }
  
</style>

<div id="section-{{ section.id }}">  
  <div class="secondary-footer-block-container">
      {%- for block in section.blocks -%}
        <div class="secondary-footer-content-container" {{ block.shopify_attributes }}>
          <div class="secondary-footer-content-container-inner">
  hello1
            <div class="secondary-footer-menu-container"> 
              {%- if block.settings.footer_menu_title != blank -%}
                <div class="secondary-footer-block-title">{{ block.settings.footer_menu_title }}</div>
              {%- endif -%}

              hello2
              <ul class="menu">
                {% for link in section.settings.footer-menu.links %}
                  <li class="menu-link">
                    <a href="{{ link.url }}">{{ link.title }}</a>
              
                    {% if link.links.size > 0 %}
                      <ul class="menu dropdown-child">
                        {% for child_link in link.links %}
                          <li class="menu-link">
                            <a href="{{ child_link.url }}">{{ child_link.title }}</a>
              
                            {% if child_link.links.size > 0 %}
                              <ul class="menu dropdown-grandchild">
                                {% for grandchild_link in child_link.links %}
                                  <li class="menu-link">
                                    <a href="{{ grandchild_link.url }}">{{ grandchild_link.title }}</a>
                                  </li>
                                {% endfor %}
                              </ul>
                            {% endif %}
                          </li>
                        {% endfor %}
                      </ul>
                    {% endif %}
                  </li>
                {% endfor %}
              </ul>
            </div>

            <div> 
              {%- if block.settings.footer_contact_title != blank -%}
                <div class="secondary-footer-block-title">{{ block.settings.footer_contact_title }}</div>
              {%- endif -%}

              hello 3
              {%- if block.settings.phone != blank -%}
                <div class="secondary-footer_description">
                  {{ block.settings.phone -}}
                </div>
              {%- endif -%}

              {%- if block.settings.location != blank -%}
                <div class="secondary-footer_description">
                  {{ block.settings.location -}}
                </div>
              {%- endif -%}

              {%- if block.settings.instagram != blank -%}
                <div class="secondary-footer_description">
                  {{ block.settings.instagram -}}
                </div>
              {%- endif -%}
            </div>

          </div>
        </div>
      {%- endfor -%}
    </div>
</div>

{% schema %}
{
  "name": "Secondary Footer",
  "tag": "section",
  "class": "secondary-foooter-section shopify-section",
  "disabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "FOOTER TITLE"
    },
    {
      "type": "select",
      "id": "header_font_size",
      "label": "Font size",
      "default": "30px",
      "options": [
        {
          "label": "Small",
          "value": "20px"
        },
        {
          "label": "Medium",
          "value": "25px"
        },
        {
          "label": "Large",
          "value": "30px"
        }
      ]
    },
    {
      "type": "richtext",
      "id": "section_description",
      "label": "Section Description"
    },
    {
      "type": "select",
      "id": "sub_header_font_size",
      "label": "Description Font size",
      "default": "18px",
      "options": [
        {
          "label": "Small",
          "value": "16px"
        },
        {
          "label": "Medium",
          "value": "18px"
        },
        {
          "label": "Large",
          "value": "20px"
        }
      ]
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#1c1b1b"
    },
    {
      "type": "range",
      "id": "section_padding_y",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section Padding Top & Bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "section_padding_x",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section Padding Left & Right",
      "default": 0
    }
  ],
  "blocks": [
    {
      "name": "Footer_Menu",
      "type": "title",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "footer_menu_title",
          "label": "Item Title"
        },
        {
          "type": "select",
          "id": "font_size",
          "label": "Font size",
          "default": "20px",
          "options": [
            {
              "label": "Small",
              "value": "16px"
            },
            {
              "label": "Medium",
              "value": "20px"
            },
            {
              "label": "Large",
              "value": "24px"
            }
          ]
        },
        {
          "type": "link_list",
          "id": "footer-menu",
          "label": "Menu"
        }
      ]
    },
    {
      "name": "Footer_Contact",
      "type": "text",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "footer_contact_title",
          "label": "Item Title"
        },
        {
          "type": "select",
          "id": "font_size",
          "label": "Font size",
          "default": "20px",
          "options": [
            {
              "label": "Small",
              "value": "16px"
            },
            {
              "label": "Medium",
              "value": "20px"
            },
            {
              "label": "Large",
              "value": "24px"
            }
          ]
        },
        {
          "type": "richtext",
          "id": "phone",
          "label": "Phone Number"
        },
        {
          "type": "richtext",
          "id": "location",
          "label": "Location"
        },
        {
          "type": "richtext",
          "id": "instagram",
          "label": "Instagram"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Sub_Footer",
      "blocks": [
        {
          "type": "title"
        },
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}
