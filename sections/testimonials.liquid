<style>

  .testimonials-header{
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .swiper-wrapper {
    padding-top: 20px;
    padding-bottom: 50px;
  }
  
  .star-rating:empty {
  --star-percent: calc(var(--star-rating) / 5 * 100%);
  display: inline-block;
  font-size: 16px;
  }

  .star-rating:before {
    content: "\2605\2605\2605\2605\2605";
    background: linear-gradient(
      90deg,
      #f1b824 var(--star-percent),
      #e1e1e1 var(--star-percent)
    );
    background-clip: text;
    color: transparent;
  }

  .testimonials-box{
    background-color: #F4F4F4;
    border-radius: 10px;
    max-width: 300px;
    padding: 20px;
    text-align: center;
  }

  .swiper-slide.testimonials,
  .swiper-slide.testimonials.swiper-slide-active,
  .swiper-slide.testimonials.swiper-slide-prev{
    opacity: 0.5;
  }

  .swiper-slide.testimonials.swiper-slide-next{
    opacity: 1;
  }
  
  .swiper-pagination-bullet-active {
    background: black;
    height: 10px;
    width: 10px;
  }
</style>

<div class="testimonials-header">
  {%- if section.settings.title != blank -%}
    <h2 class="">{{ section.settings.title }}</h2>
  {%- endif -%}
  
  {%- if section.settings.section_description != blank -%}
    {{ section.settings.section_description }}
  {%- endif -%}
</div>


<div class="swiper testimonials-slider">
  <div class="swiper-wrapper">
    {%- for block in section.blocks -%}
      <div class="swiper-slide testimonials" {{ block.shopify_attributes }}>
        <div class="testimonials-box">
          {%- if block.settings.star_rating != blank -%}
              <div class="star-rating" style="--star-rating: {{ block.settings.star_rating }};"></div>
            {%- endif -%}
        
          {%- if block.settings.description != blank -%}
            <div class="testimonials_description">
              {{ block.settings.description -}}
            </div>
          {%- endif -%}
        
          {%- if block.settings.title != blank -%}
            {{ block.settings.title }}
          {%- endif -%}
        </div>
      </div>
    {%- endfor -%}
  </div>
  <div class="swiper-pagination"></div>
</div>
<script>
  addEventListener('DOMContentLoaded', (event) => {
    var swiper = new Swiper('.testimonials-slider', {
      scrollbar: {
        draggable: true,
      },
      loop: true,
      slidesPerView: 3,
      spaceBetween: 30,
      pagination: {
        el: ".swiper-pagination",
      },
    });
  });
</script>

