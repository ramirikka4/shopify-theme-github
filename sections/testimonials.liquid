{{ 'testimonials.css' | asset_url | stylesheet_tag }}

<style>
  
  #section-{{ section.id }} {
    background: {{ section.settings.background }};
    padding: {{section.settings.section_padding}};
  }
  .testimonials-header h2{
    color: {{ section.settings.header_color }};
  }

  .testimonials-header p{
    color: {{ section.settings.header_color }};
  }

  .author-name{
    font-size: {{ section.settings.font_size }};
  }

  .testimonials_description{
    font-size: {{ section.settings.font_size }};
  }

</style>
<div id="section-{{ section.id }}">
  <div class="testimonials-header">
    {%- if section.settings.title != blank -%}
      <div class="header-line"> 
        <div class="line"></div>
        <h2>{{ section.settings.title }}</h2>
        <div class="line"></div>
      </div>
    {%- endif -%}
    
    {%- if section.settings.section_description != blank -%}
      {{ section.settings.section_description }}
    {%- endif -%}
  </div>
  
  
  <div class="swiper testimonials-slider">
    <div class="swiper-wrapper">
      {%- for block in section.blocks -%}
        <div class="swiper-slide testimonials" {{ block.shopify_attributes }}>
          <div class="testimonials-box">
            {%- if block.settings.star_rating != blank -%}
                <div class="star-rating" style="--star-rating: {{ block.settings.star_rating }};"></div>
              {%- endif -%}
          
            {%- if block.settings.description != blank -%}
              <div class="testimonials_description">
                {{ block.settings.description -}}
              </div>
            {%- endif -%}
          
            {%- if block.settings.title != blank -%}
              <div class="author-name">{{ block.settings.title }}</div>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
    <div class="swiper-pagination"></div>
  </div>
  {%- if section.settings.review_button != blank -%}
    <div class="button-container">
      <a {% if section.settings.button_link == blank %}
      role="link" aria-disabled="true"
      {% else %}
      href="{{ section.settings.button_link }}"
      {% endif %} class="button{% if section.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}">{{ section.settings.review_button }}</a>
    </div>
    {%- endif -%}
</div>

<script>
  addEventListener('DOMContentLoaded', (event) => {
    var autoplayEnabled = {{ section.settings.autoplay | json }};
    
    var swiperOptions = {
      scrollbar: {
        draggable: true,
      },
      loop: true,
      spaceBetween: 30,
      pagination: {
        el: ".swiper-pagination",
      },
      breakpoints: {
        // when window width is >= 768px (48em)
        768: {
          slidesPerView: 3,
        },
        // when window width is < 768px (48em)
        0: {
          slidesPerView: 1,
        }
      }
    };
    
    if (autoplayEnabled) {
      swiperOptions.autoplay = {
        delay: 4500,
        disableOnInteraction: false,
      };
    }
    
    var swiper = new Swiper('.testimonials-slider', swiperOptions);
  });
</script>


