{{ 'testimonials.css' | asset_url | stylesheet_tag }}

{%- if section.settings.title != blank -%}
  <h2 class="image-with-text__heading inline-richtext h0">{{ section.settings.title }}</h2>
{%- endif -%}
<div class="swiper testimonials-slider">
  <div class="swiper-wrapper">
    {%- for block in section.blocks -%}
      <div class="swiper-slide testimonials" {{ block.shopify_attributes }}>
          {%- if block.settings.description != blank -%}
            <div class="testimonials_description">
              {{ block.settings.description -}}
            </div>
          {%- endif -%}
            {%- if block.settings.star_rating != blank -%}
              <div class="star-rating" style="--star-rating: {{ block.settings.star_rating }};"></div>
            {%- endif -%}
            {%- if block.settings.title != blank -%}
              {{ block.settings.title }}
            {%- endif -%}
      </div>
    {%- endfor -%}
  </div>
  <div class="swiper-scrollbar"></div>
</div>
<script>
  addEventListener('DOMContentLoaded', (event) => {
    var swiper = new Swiper('.testimonials-slider', {
      scrollbar: {
        el: '.swiper-scrollbar',
        draggable: true,
      },
      loop: true,
    });
  });
</script>

{% schema %}
{
  "name": "Testimonial Slider",
  "tag": "section",
  "class": "testimonials-section shopify-section page-width",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "What others have said"
    }
  ],
  "blocks": [
    {
      "name": "Testimonial",
      "type": "title",
      "settings": [
        {
          "type": "richtext",
          "id": "description",
          "label": "Testimonial text"
        },
        {
          "type": "select",
          "id": "star_rating",
          "label": "Star Rating",
          "options": [
            {
              "value": "",
              "label": "None"
            },
            {
              "value": "3",
              "label": "3 out of 5"
            },
            {
              "value": "3.5",
              "label": "3.5 out of 5"
            },
            {
              "value": "4",
              "label": "4 out of 5"
            },
            {
              "value": "4.5",
              "label": "4.5 out of 5"
            },
            {
              "value": "5",
              "label": "5 out of 5"
            }
          ]
        },
        {
          "type": "text",
          "id": "title",
          "label": "Author's name"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonial",
      "blocks": [
        {
          "type": "title"
        },
        {
          "type": "title"
        },
        {
          "type": "title"
        }
      ]
    }
  ]
}
{% endschema %}
